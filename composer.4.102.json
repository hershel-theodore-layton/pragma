{
  "name": "hershel-theodore-layton/pragma",
  "description": "A structured way of embedding source analyzer metadata in Hack",
  "license": "MIT",
  "require": {
    "hhvm": "^4.102"
  },
  "require-dev": {
    "hhvm/hhvm-autoload": "^3.2",
    "hhvm/hsl": "^4",
    "hhvm/hsl-experimental": "^4"
  },
  "scripts": {
    "post-install-cmd": [
      "rm vendor/autoload.php vendor/composer/*.php"
    ],
    "post-update-cmd": [
      "rm vendor/autoload.php vendor/composer/*.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  }
}
